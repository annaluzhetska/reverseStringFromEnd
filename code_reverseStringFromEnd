const word = 'Programming';
function reverseString (string){
    let result ='';
    for (let i = string.length - 1; i >= 0; i--){
        result += string[i]; 
    }
    return result;

}

const reverse = reverseString(word);
console.log(`Оригінальне слово: ${word}`);
console.log(`Навпаки: ${reverse}`); 
